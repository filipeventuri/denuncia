<%- include ("../../partials/header") %>
<%- include ("../../partials/navbar") %>
<div class="container">
    <hr>
    <h2> Categorias</h2>
    <br>
    <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
    <hr>
    
   
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
            </tr>
        </thead>
        <% categories.forEach((one)=>{ %>
    <tbody>
        
            <th><%= one.id %></th>
            <th><%= one.title %></th>
            <th><%= one.slug %></th>
            <th>
            <a class="btn btn-warning" href="/admin/categories/edit/<%= one.id %>" >Editar</a>
            <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="sure(event,this)">
            <input type="hidden" name="id" value="<%= one.id %>">
            <button class="btn btn-danger">Remover</button>
            </form>
            </th>
            
          
    </tbody>
    <% }) %>
    </table>
</div>
<%- include ("../../partials/footer.ejs") %>
<script>
    function sure(event,form){
        event.preventDefault();
        var confirmacao = confirm("Você deseja deletar essa categoria?") 
        if(confirmacao){
            form.submit();
        }

    }

</script>