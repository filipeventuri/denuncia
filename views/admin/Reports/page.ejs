<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/homenavbar.ejs")%>
<body>
    <div class="container">
        <br>
        <% result.Reports.rows.forEach((one)=>{ %>
        <br>
        <div class="card" style="background-color:#2C2C2C; color:#FFF;">
            <div class="card-header">
                <h2><%= one.title %></h2>

            </div>
            <div class="card-body" style="background-color:#424242;">
                <a class="btn btn-primary" href="/<%=one.slug%>">Visualizar descrição</a>
            </div>
            <div class="card-footer">
                <%= one.location %>
            </div>

        </div>
        <% }) %>
        
        <br>
        
        <div class="row" >
            <div class="col col-12">
                <% if(result.page > 2){ %>
                    <a href="/Reports/page/<%=result.page - 1%>"><<< Prev</a>
                <% }else{ %> 
                    <a href="/"><<< Prev</a> 
                <% } %>
                <% if(result.next == true){ %><a style="float:right;" href="/Reports/page/<%=result.page + 1%>">Next >>></a><% } %>
            </div>
        </div> 
        
        <br>
        <br>
    </div>
</body>

<%- include ("../../partials/footer.ejs") %>